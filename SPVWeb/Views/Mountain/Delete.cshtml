@model Mountain

<form method="post" asp-action="DeletePOST">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Mountain</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="TrackCount"></label>
            <input asp-for="TrackCount" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="SkiLiftRent"></label>
            <input asp-for="SkiLiftRent" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="HelmetRent"></label>
            <input asp-for="HelmetRent" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="SkiiRent"></label>
            <input asp-for="SkiiRent" disabled class="form-control"/>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control"/>
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Mountain" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}