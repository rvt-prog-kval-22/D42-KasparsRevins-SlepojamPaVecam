@model Mountain


<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Apskatīt kalnus</h2>
        <hr />
    </div>
    <div class="mb-3">
        <label asp-for="Name">Nosaukums</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="TrackCount">Trašu Skaits</label>
        <input asp-for="TrackCount" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SkiLiftRent">Pacēlāja īre</label>
        <input asp-for="SkiLiftRent" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="HelmetRent">Ķiveres īre</label>
        <input asp-for="HelmetRent" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="SkiiRent">Slēpju īre</label>
        <input asp-for="SkiiRent" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description">Apraksts</label>
        <textarea asp-for="Description" class="form-control" id="exampleTextarea" rows="3"></textarea>

    </div>
    <a asp-controller="Mountain" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Atpakaļ
    </a>

    <a asp-controller="Reservations" asp-action="Create" asp-route-mountainid="@Model.Id" class="btn btn-secondary" style="width:150px">
        Rezervēt
    </a>
</div>
