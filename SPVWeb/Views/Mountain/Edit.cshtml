@model Mountain

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="TrackCount"></label>
            <input asp-for="TrackCount" class="form-control"/>
            <span asp-validation-for="TrackCount" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SkiLiftRent"></label>
            <input asp-for="SkiLiftRent" class="form-control"/>
            <span asp-validation-for="SkiLiftRent" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="HelmetRent"></label>
            <input asp-for="HelmetRent" class="form-control"/>
            <span asp-validation-for="HelmetRent" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SkiiRent"></label>
            <input asp-for="SkiiRent" class="form-control"/>
            <span asp-validation-for="SkiiRent" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
        <a asp-controller="Mountain" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}