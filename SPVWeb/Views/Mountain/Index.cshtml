@model IEnumerable<Mountain>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Kalnu saraksts </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Mountain" asp-action="Create" class="btn-primary btn">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Mountain
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style"width:100%">
    <thead>
        <tr>
            <th>
                Mountain Name
            </th>
            <th>
                Tracks 
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="25%">
                    @obj.TrackCount
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Mountain" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                            Rediģēt
                        </a>
                        <a asp-controller="Mountain" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                            Dzēst
                        </a>
                        <a asp-controller="Mountain" asp-action="View" asp-route-id="@obj.Id" class="btn btn-success mx-2">
                            <i class="bi bi-arrows-fullscreen"></i>
                            Apskatīt
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>