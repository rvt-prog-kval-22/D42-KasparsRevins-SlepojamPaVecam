@using SPVWeb.ViewModel
@model EditRoleViewModel

@{
    ViewBag.Title = "Rediģēt lomu";
}

<h1>Rediģēt Lomu</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input  asp-for="@Model.RoleName" class="form-control">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

   

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Atjaunot</button>
            <a asp-action="ListRoles" class="btn btn-primary">Atcelt</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Lietotāji šajā lomā</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Pašlaik neviena nav</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" class="btn btn-primary" style="width:auto">Pievienot Lietotājus</a>
            <a href="#" class="btn btn-primary" style="width:auto">Dzēst Lietotājus</a>
        </div>
    </div>
</form>